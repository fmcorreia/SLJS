<UserControl x:Class="Databinding.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="521" d:DesignWidth="752">

    <Grid x:Name="LayoutRoot" Background="White">
        <TextBox Height="23" HorizontalAlignment="Left" Margin="102,10,0,0" Name="txtOneTime" Text="{Binding Mode=OneTime, Path=StringProperty}" VerticalAlignment="Top" Width="319" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="lblOneTime" Text="One time:" VerticalAlignment="Top" Width="134" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="104,48,0,0" Name="txtOneWay" Text="{Binding Mode=OneWay, Path=StringProperty}" VerticalAlignment="Top" Width="319" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,48,0,0" Name="lblOneWay" Text="One way:" VerticalAlignment="Top" Width="134" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="102,87,0,0" Name="txtTwoWay" Text="{Binding Mode=TwoWay, Path=StringProperty}" VerticalAlignment="Top" Width="319" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="10,87,0,0" Name="lblTwoWay" Text="Two way:" VerticalAlignment="Top" Width="134" />
    </Grid>
</UserControl>
